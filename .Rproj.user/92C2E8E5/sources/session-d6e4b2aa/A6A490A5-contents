#' <Add Title>
#'
#' <Add Description>
#'
#' @importFrom reactR createReactShinyInput
#' @importFrom htmltools htmlDependency tags
#'
#' @export
ActionButton_Input <- function(inputId, default = "") {
  reactR::createReactShinyInput(
    inputId,
    "ActionButton_",
    htmltools::htmlDependency(
      name = "ActionButton_-input",
      version = "1.0.0",
      src = "www/primereact/ActionButton_",
      package = "primereact",
      script = "ActionButton_.js"
    ),
    default,
    list(),
    htmltools::tags$span
  )
}

#' <Add Title>
#'
#' <Add Description>
#'
#' @export
updateActionButton_Input <- function(session, inputId, value, configuration = NULL) {
  message <- list(value = value)
  if (!is.null(configuration)) message$configuration <- configuration
  session$sendInputMessage(inputId, message);
}